<h1>Cart</h1>

<div id="card">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn waves-effect waves-light black js-remove"
                            type="submit"
                            name="action"
                            data-id="{{id}}">Remove
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Overall price:</strong><span class="price">{{price}}</span> </p>
    {{else}}
    <p class="black-text">Cart is empty, to fill cart go to <a href="/courses">courses list.</a></p>
{{/if}}
</div>