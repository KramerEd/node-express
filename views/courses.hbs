<h2 class="center-align">Courses</h2>
{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card grey darken-3 hoverable">
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                    </div>
                    <div class="card-content white-text">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action grey darken-2 actions">
                        <a href="/courses/{{id}}" target="_blank">Open course</a>
                        <a href="/courses/{{id}}/edit?allow=true" target="_blank">Edit</a>
                        <form action="/cart/add" method="POST">
                            <button class="btn waves-effect waves-light grey darken-2" type="submit">
                                Buy
                                <input type="hidden" name="id" value="{{id}}">
                                <i class="material-icons right">add_shopping_cart</i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>There are no courses yet</p>
{{/if}}
